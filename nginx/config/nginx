worker_processes 4;


events {
    worker_connections 1024;
}


http {
    include mime.types;

    upstream node_server {
        least_conn;
        server cc-node1:8000 weight=10 max_fails=3 fail_timeout=30s;
        server cc-node2:8000 weight=10 max_fails=3 fail_timeout=30s;
        server cc-node3:8000 weight=10 max_fails=3 fail_timeout=30s;
    }

    server {
        listen 80;

        gzip on;
        gzip_comp_level 6;
        gzip_min_length 256;
        gzip_proxied any;
        gzip_types
            application/javascript
            application/json
            image/svg+xml
            text/css
            text/plain
        ;

        server_name candidateclicker.com www.candidateclicker.com;

        location /static/ {
            root /usr/src/app/;

            expires 1y;
        }

        location / {
            proxy_pass http://node_server;

            expires -1;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
        }
    }
}
